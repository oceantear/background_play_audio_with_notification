<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button android:id="@+id/local_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_local_music"
            android:textColor="@android:color/black"/>

        <Button android:id="@+id/remote_rtmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_remote_rtmp"
            android:layout_below="@+id/local_music"/>

        <Button android:id="@+id/local_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_local_movie"
            android:layout_below="@+id/remote_rtmp"/>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>